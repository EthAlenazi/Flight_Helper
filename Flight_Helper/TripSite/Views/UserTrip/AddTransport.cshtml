@model TransportViewModel

@{
    ViewData["Title"] = "Add Transport";
}

<h1>Add Transport</h1>

<form asp-action="AddTransport">
    <input type="hidden" asp-for="TripID" />
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" class="form-control" asp-items="Model.TransportTypes"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartureLocation" class="control-label"></label>
        <input asp-for="DepartureLocation" class="form-control" />
        <span asp-validation-for="DepartureLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalLocation" class="control-label"></label>
        <input asp-for="ArrivalLocation" class="form-control" />
        <span asp-validation-for="ArrivalLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartureDateTime" class="control-label"></label>
        <input asp-for="DepartureDateTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="DepartureDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalDateTime" class="control-label"></label>
        <input asp-for="ArrivalDateTime" class="form-control" type="datetime-local" />
        <span asp-validation-for="ArrivalDateTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note" class="control-label"></label>
        <input asp-for="Note" class="form-control"/>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Next" class="btn btn-primary" />
    </div>
</form>
